<view>
  <image class="logo" src="/images/outpage/logo.png" mode="widthFix"/>
</view>
<view class="box">
  <view class="page-section">
    <view class="form-row">
      <view class="form-row-label">您的姓名 </view>
      <view class="form-row-content">
        <view>
          <input class="input" name="name" data-name="name" onInput="iptFn" placeholder="请输入您的姓名" />
        </view>
      </view>
    </view>
    
    <view class="form-row">
      <view class="form-row-label">您的电话</view>
      <view class="form-row-content">
        <view>
          <input class="input" name="phone" data-name="phone" onInput="iptFn" placeholder="请输入您的电话" />
        </view>
      </view>
    </view>

    <view class="form-row">
      <view class="form-row-label">您的地址</view>
      <view class="form-row-content">
        <view>
          <input class="input" name="address" data-name="address" onInput="iptFn" placeholder="请输入您的地址" />
        </view>
      </view>
    </view>
    
    <view class="form-row" name="date" data-name="date">
      <view class="form-row-label">预约上门清洗时间</view>
      <view class="form-row-content">
        <view onTap="apiDatePicker">
          <view class="pick">{{apiDate ? apiDate : '请选择日期'}}</view>
        </view>

      </view>
    </view>
    
    <view class="form-row" name="objectArray">
      <view class="form-row-label">您所预约的套餐为</view>
      <view class="form-row-content">
        <view>
          <picker onChange="bindObjPickerChange" value="{{arrIndex}}" range="{{objectArray}}" range-key="name">
            <view class="pick">
              {{objectArray[arrIndex].name}}
            </view>
          </picker>
        </view>
      </view>
    </view>
    
    <button formType="submit" onTap="onSubmit" disabled="my.showToast({
      type: 'fail',
      content: '预约失败！',

    });">提交</button>
  </view>
</view>
