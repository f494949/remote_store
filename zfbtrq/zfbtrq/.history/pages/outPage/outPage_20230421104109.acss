page {
  background: url('https://wp.babel-group.cn/background.png') center center no-repeat;
  width: auto;
	height: 100%;
  min-height: 100vh;			
  background-size: 100% 100%;
  overflow-x: hidden;
  margin: 0;
}

.logo {

  width: 300rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.page-section {
  margin: auto;
	padding: 3% 5%;
}

.form-row-label::after {
  content: '* ';
  color: red;
}

.form-row-label {
  font-weight: bold;
  font-size:large;
  margin-top: 40rpx;
}

.box {
  background-color: #fff;
  border-radius: 20rpx;
  margin:5% 20rpx 10rpx;
}

.input{
  font-size:large;
  margin-top:40rpx;
  /* margin-right: 15rpx; */
  width: 100%;
  height: auto;
  /* background-color: #efeff4 */
}

button {
  width: 100%;
  height: auto;
  font-weight: bold;
  margin-top: 60rpx;
  color: white;
  background-color: coral;
}

.pick {
  display:block;
  width:100%;
  margin-top: 40rpx;
  font-size: large;
}

.pickHour {
  display:block;
  width:48%;
  margin-top: 40rpx;
  font-size: large;
}

.title {
  display:block;
  width:100%;
  margin-top: 40rpx;
  margin-left: 10rpx;
  font-size: large;
  color: #888;
}

.fix {
  display: flex;
}

